Zadanie 1
n = int(input("Podaj liczbę całkowitą dodatnią: "))

if n <= 0:
    print("Liczba musi być dodatnia!")
else:
    for i in range(1, n + 1, 2):
        print(i, end=", ")
Zadanie 2
A = int(input("Podaj A: "))
B = int(input("Podaj B: "))

if A >= B:
    print("A musi być mniejsze od B!")
else:
    # while
    suma = 0
    i = A
    while i <= B:
        suma += i
        i += 1
    print(suma)

    # do-while (symulacja)
    suma = 0
    i = A
    while True:
        suma += i
        i += 1
        if i > B:
            break
    print(suma)

    # for
    suma = sum(range(A, B + 1))
    print(suma)
Zadanie 3
n = int(input("Podaj liczbę dodatnią: "))
i = 1
while i <= n:
    print(i)
    i *= 2
Zadanie 4
suma = 0
while True:
    liczba = int(input("Podaj liczbę (0 kończy): "))
    if liczba == 0:
        break
    suma += liczba
print(f"Suma podanych liczb: {suma}")
Zadanie 5
liczby = []

while True:
    x = int(input("Podaj liczbę (0 kończy): "))
    if x == 0:
        break
    liczby.append(x)

if len(liczby) == 0:
    print("Nie podano żadnych liczb!")
else:
    min_liczba = min(liczby)
    max_liczba = max(liczby)
    suma = min_liczba + max_liczba
    srednia = suma / 2
    print(f"{suma} // suma min i maks")
    print(f"{srednia} // średnia")
Zadanie 6
import random

liczba = random.randint(1, 100)
print("=== Gra: Za dużo, za mało ===")
print("Zgadnij liczbę z zakresu 1–100!")

while True:
    x = int(input("Podaj liczbę: "))
    if x > liczba:
        print("Podałeś za dużą wartość.")
    elif x < liczba:
        print("Podałeś za małą wartość.")
    else:
        print("Gratulacje! Zgadłeś!")
        break
Zadanie 7 
zn = input("Podaj znak wypełnienia: ")
x = int(input("Podaj pozycję X (kolumna): "))
y = int(input("Podaj pozycję Y (wiersz): "))
a = int(input("Podaj wysokość (a): "))
b = int(input("Podaj szerokość (b): "))

print("\n" * (y - 1), end="")
for _ in range(a):
    print(" " * (x - 1) + zn * b)
Zadanie 8
n = int(input("Podaj wysokość choinki: "))
for i in range(1, n + 1):
    print("*" * (2 * i - 1))
Zadanie 9
liczba = input("Podaj liczbę całkowitą: ")

cyfry = [int(c) for c in liczba if c.isdigit()]
suma_cyfr = sum(cyfry)
print(f"Suma cyfr: {suma_cyfr}")

parzyste = [c for c in cyfry if c % 2 == 0]
nieparzyste = [c for c in cyfry if c % 2 != 0]

if parzyste and nieparzyste:
    sr_parz = sum(parzyste) / len(parzyste)
    sr_nieparz = sum(nieparzyste) / len(nieparzyste)
    print(f"Stosunek średnich (parzyste/nieparzyste): {sr_parz / sr_nieparz:.2f}")
else:
    print("Brak jednej z grup cyfr (parzystych lub nieparzystych).")
Zadanie 10 
n = int(input("Podaj liczbę całkowitą: "))
print(f"Dzielniki liczby {n} to:")
for i in range(1, n + 1):
    if n % i == 0:
        print(i, end=" ")
Zadanie 11
n = int(input("Podaj liczbę całkowitą > 1: "))

if n <= 1:
    print("Liczba musi być większa od 1!")
else:
    for i in range(2, int(n ** 0.5) + 1):
        if n % i == 0:
            print("To nie jest liczba pierwsza.")
            break
    else:
        print("To jest liczba pierwsza.")




